{
  "name": "code050/codestyle-local",
  "description": "The official Code050 codestyle package, containing a guideline, a phpcs configuration and a phpstan configuration.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Code050\\Codestyle\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Melchior Kokernoot",
      "email": "melchior@code050.nl"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "friendsofphp/php-cs-fixer": "^3.12",
    "kuria/composer-pkg-scripts": "^1.1",
    "squizlabs/php_codesniffer": "^3.7",
    "slevomat/coding-standard": ">8.7.1",
    "phpstan/phpstan": "^1.9"
  },
  "extra": {
    "package-scripts": {
      "fix": "vendor/bin/phpcbf",
      "check": "vendor/bin/phpcs",
      "stan": "vendor/bin/phpstan . --memory-limit=-1",
      "checkall": [
        "@check",
        "@stan"
      ],
      "init": "Code050\\Codestyle\\Scripts\\InitializeCodestyle::handle",
    }
  },
  "config": {
    "allow-plugins": {
      "kuria/composer-pkg-scripts": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
