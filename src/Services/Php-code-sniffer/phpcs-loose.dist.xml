<?xml version="1.0" encoding="UTF-8"?>
<rule name="Code050_Dist">
    <description>Distributable config for code050 standard</description>
    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="cache" value=".phpcs.cache"/>
    <arg name="extensions" value="php"/>
    <file>.</file>
    <rule ref="vendor/code050/codestyle/src/Services/php-code-sniffer/phpcs.xml"/>

    <!--Adjust project specific preferences below-->
    <rule ref="Generic.CodeAnalysis.EmptyStatement.DetectedElse">
        <type>warning</type>
    </rule>
    <rule ref="Generic.Strings.UnnecessaryStringConcat.Found">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Arrays.DisallowImplicitArrayCreation.ImplicitArrayCreationUsed">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.InlineDocCommentDeclaration.InvalidFormat">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.InlineDocCommentDeclaration.MissingVariable">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.InlineDocCommentDeclaration.NoAssignment">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.ControlStructures.AssignmentInCondition.AssignmentInCondition">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.ControlStructures.RequireTernaryOperator.TernaryOperatorNotUsed">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.ControlStructures.UselessIfConditionWithReturn.UselessIfCondition">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Functions.StrictCall.StrictParameterMissing">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Operators.RequireOnlyStandaloneIncrementAndDecrementOperators.PostIncrementOperatorNotUsedStandalone">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Operators.RequireOnlyStandaloneIncrementAndDecrementOperators.PreDecrementOperatorNotUsedAsStandalone">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ParameterTypeHint.MissingAnyTypeHint">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ReturnTypeHint.MissingAnyTypeHint">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.Variables.UnusedVariable.UnusedVariable">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ParameterTypeHint.MissingTraversableTypeHintSpecification">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ReturnTypeHint.MissingTraversableTypeHintSpecification">
        <type>warning</type>
    </rule>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <type>warning</type>
    </rule>
    <rule ref="SlevomatCodingStandard.ControlStructures.DisallowEmpty.DisallowedEmpty">
        <type>warning</type>
    </rule>
</rule>